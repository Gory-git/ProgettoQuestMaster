# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/questmaster_db

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# FastAPI Configuration
DEBUG=False
LOG_LEVEL=INFO
API_TITLE=QuestMaster API
API_VERSION=1.0.0
API_DESCRIPTION=AI-powered quest generation and management system

# PDDL Configuration
PDDL_DOMAIN_PATH=./domains/questmaster_domain.pddl
PDDL_PROBLEM_PATH=./problems/generated_problem.pddl
PDDL_SOLVER_TIMEOUT=30
PDDL_MAX_ACTIONS=100
PDDL_ENABLE_VALIDATION=True

# Image Caching Configuration
IMAGE_CACHE_ENABLED=True
IMAGE_CACHE_TTL_HOURS=24
IMAGE_CACHE_MAX_SIZE_MB=1000
IMAGE_CACHE_DIR=./cache/images
IMAGE_CACHE_CLEANUP_INTERVAL_HOURS=6

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_STORAGE=memory

# CORS Configuration
CORS_ENABLED=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]
CORS_MAX_AGE=3600

# Feature Flags
FEATURE_AI_QUEST_GENERATION=True
FEATURE_PDDL_PLANNING=True
FEATURE_IMAGE_GENERATION=True
FEATURE_USER_ANALYTICS=True
FEATURE_QUEST_SHARING=True
FEATURE_ADVANCED_FILTERS=True
FEATURE_QUEST_TEMPLATES=True
FEATURE_REAL_TIME_NOTIFICATIONS=False

# Additional Backend Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
WORKERS=4
RELOAD=False

# Email Configuration (Optional)
EMAIL_ENABLED=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SENDER_EMAIL=noreply@questmaster.com
SENDER_NAME=QuestMaster

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./storage
TEMP_FILES_CLEANUP_HOURS=24

# Monitoring and Logging
SENTRY_DSN=
ENABLE_PROFILING=False
PROFILING_INTERVAL_SECONDS=60
